<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:micro="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
             xmlns:converters="clr-namespace:Elephonkey.Service;assembly=Elephonkey"
             x:Class="Elephonkey.Views.ResultsPage"
             Title="">
    
    <ContentPage.Resources>
        <converters:ColorConverter x:Key="ColorConverter"/>
    </ContentPage.Resources>

    <ContentPage.Content>
        <VerticalStackLayout Spacing="0" Padding="15,5" >
            <Image Source="elephonkey.png" HeightRequest="50"/>

            <VerticalStackLayout IsVisible="{Binding QuizComplete}">
                
                <micro:ChartView IsEnabled="{Binding QuizComplete}"  x:Name="ResultChart" HeightRequest="250" Margin="0,20,0,15"/>
                <Image Source="legend.png" HeightRequest="50"/>

                <HorizontalStackLayout HorizontalOptions="Center" Padding="5">
                    <Label Text="Your type is" FontSize="19" FontFamily="Serif" HorizontalTextAlignment="Center" VerticalTextAlignment="End" Margin="0,0,7,0"/>
                    <Label Text="{Binding ResultText}" TextColor="{Binding ResultColor, Converter={StaticResource ColorConverter}}" FontSize="19" FontFamily="Serif" HorizontalTextAlignment="Start" VerticalTextAlignment="End"/>
                </HorizontalStackLayout>
                <Label Text="See how other users compare" FontSize="10" FontFamily="Serif" HorizontalTextAlignment="Center" VerticalTextAlignment="End" Margin="0,15,7,0"/>

                <micro:ChartView IsEnabled="{Binding QuizComplete}"  x:Name="UserChart" HeightRequest="275" Margin="0,15,0,0"/>
            </VerticalStackLayout>

            <HorizontalStackLayout IsVisible="{Binding QuizIncomplete}" VerticalOptions="Center" HorizontalOptions="Center">
                <Label Text="Please Complete Survey" FontFamily="PoppinsB"  Margin="0,350,0,0"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>