<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Elephonkey.Views.SurveyPage"
             Title="">

    <ContentPage.Content>
        <VerticalStackLayout Spacing="0" Padding="15,5">

            <Image Source="elephonkey.png" HeightRequest="50"/>

            <Label Text="{Binding CurrentQuestion.QuestionText}" Margin="0,50,0,0" Padding="4" HorizontalOptions="Center" FontSize="Medium" MinimumHeightRequest="150" MaximumHeightRequest="150"/>

            <VerticalStackLayout HorizontalOptions="Center" Spacing="10">

                <Button Text="Strongly Agree" FontSize="12" FontAttributes="Bold" FontFamily="PoppinsSB" TextColor="Black"
                        BackgroundColor="#F2F2F2"
                        Padding="4"
                        MinimumWidthRequest="300" MinimumHeightRequest="75" CornerRadius="6"
                        Command="{Binding StronglyAgree}"/>

                <Button Text="Slightly Agree" FontSize="12" FontAttributes="Bold" FontFamily="PoppinsSB" TextColor="Black"
                        BackgroundColor="#F2F2F2"
                        Padding="4"
                        MinimumWidthRequest="300" MinimumHeightRequest="75" CornerRadius="6"
                        Command="{Binding SlightlyAgree}"/>

                <Button Text="Neutral" FontSize="12" FontAttributes="Bold" FontFamily="PoppinsSB" TextColor="Black"
                        BackgroundColor="#F2F2F2"
                        Padding="4"
                        MinimumWidthRequest="300" MinimumHeightRequest="75" CornerRadius="6"
                        Command="{Binding Neutral}"/>

                <Button Text="Slightly Disagree" FontSize="12" FontAttributes="Bold" FontFamily="PoppinsSB" TextColor="Black"
                        BackgroundColor="#F2F2F2"
                        Padding="4"
                        MinimumWidthRequest="300" MinimumHeightRequest="75" CornerRadius="6"
                        Command="{Binding SlightlyDisagree}"/>


                <Button Text="Strongly Disagree" FontSize="12" FontAttributes="Bold" FontFamily="PoppinsSB" TextColor="Black" HorizontalOptions="Center"
                        BackgroundColor="#F2F2F2"
                        Padding="4"
                        MinimumWidthRequest="300" MinimumHeightRequest="75" CornerRadius="6"
                        Command="{Binding StronglyDisagree}"/>
                
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>