<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:micro="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
             x:Class="Elephonkey.Views.HomePage"
             Title="">
    <ContentPage.Content>
        <VerticalStackLayout Spacing="0" Padding="15,5">

            <Image Source="elephonkey.png" HeightRequest="50"/>

            <Label Text="Welcome," FontFamily="Serif" FontSize="15" FontAttributes="Italic" Margin="10,35,0,0"/>
            <Label Text="{Binding name}" FontFamily="Serif" FontAttributes="Italic" FontSize="15" Margin="10,0,0,50"/>

            <Label Text="Political Breakdown" FontFamily="PoppinsB" FontSize="30" HorizontalTextAlignment="Center"/>

            <micro:ChartView x:Name="chartView" HeightRequest="300" Margin="0,15,0,20"/>

            <Image Source="legend.png" HeightRequest="50"/>

        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>