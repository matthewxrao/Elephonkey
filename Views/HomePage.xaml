<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:micro="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
             x:Class="Elephonkey.Views.HomePage"
             Title="">
    <ContentPage.Content>
        <VerticalStackLayout Spacing="0" Padding="15,5">

            <Image Source="elephonkey.png" HeightRequest="75"/>

            <Label Text="Welcome," FontSize="15"/>
            <Label Text="{Binding name}" FontSize="15" Margin="0,0,0,30"/>

            <Label Text="Political Breakdown" FontSize="30" HorizontalTextAlignment="Center"/>

            <micro:ChartView x:Name="chartView" HeightRequest="300" Margin="0,25,0,20"/>

            <Image Source="legend.png" HeightRequest="50"/>

        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>